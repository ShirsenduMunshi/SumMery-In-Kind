{
    "manifest_version": 3,
    "name": "SumMary In Kind",
    "version": "1.0",

    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",
    "host_permissions": ["<all_urls>"]
}